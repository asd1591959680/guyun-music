.recommend_wrap {
  padding: 20rpx;
}
.recommend_wrap .header {
  padding-bottom: 20rpx;
}
.recommend_wrap .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.recommend_wrap .header .more {
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}
.scroll_wrap {
  display: flex;
  height: 300rpx;
}
.scroll_wrap .scroll_item {
  width: 200rpx;
  margin-right: 20rpx;
}
.scroll_wrap .scroll_item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll_wrap .scroll_item text {
  font-size: 26rpx;
  /* 多行文本溢出 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /*  */
}
.nav_container {
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.nav_container .nav_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav_container .nav_item .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #f1473f;
  border-radius: 50%;
  font-size: 50rpx;
  color: #fff;
}
.toplist {
  padding: 20rpx;
}
.toplist_swiper {
  height: 400rpx;
}
.toplist_swiper swiper-item {
  background-color: #f7f7f7;
}
.toplist_swiper swiper-item .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.toplist_swiper swiper-item .musicItem {
  display: flex;
  margin-bottom: 20rpx;
}
.toplist_swiper swiper-item .musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.toplist_swiper swiper-item .musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.toplist_swiper swiper-item .musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
